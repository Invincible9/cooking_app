{% extends 'base.html.twig' %}

{% block main %}
    <h2>Register</h2>

    <form method="post">
        <label for="email">Email:</label>
        <input type="email" id="email" name="registration_form[email]" required autofocus><br>

        <label for="username">Username:</label>
        <input type="text" id="username" name="registration_form[username]"><br>

        <label for="password">Password:</label>
        <input type="password" id="password" name="registration_form[password]" required><br>

        <button type="submit" class="btn btn-success">Register</button>
        {{  form_row(form._token) }}
    </form>
{% endblock %}
